extends ../layout 

block content 
  h1= title 
  p  
    a(class="button" href="/books/new") Create new book
  table()
    tr 
      th Title 
      th Author 
      th Genre 
      th Year   
    each book in books
      tr
        td #{book.title}
        td #{book.author}
        td #{book.genre}
        td #{book.year}