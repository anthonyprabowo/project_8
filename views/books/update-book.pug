extends ../layout

block content 
  h1= title 
  include errors
  form(action=`/books/${book.id}` method="POST")
    p 
      label(for="bookTitle") Title
      input(type="text" id="bookTitle" name="title" value=`${book.title}`)
    p 
      label(for="bookAuthor") Author
      input(type="text" id="bookAuthor" name="author" value=`${book.author}`)
    p 
      label(for="bookGenre") Genre
      input(type="text" id="bookGenre" name="genre" value=`${book.genre}`)
    p 
      label(for="bookYear") Year
      input(type="text" id="bookYear" name="year" value=`${book.year}`)
    p 
      input(type="submit" value="Update Book")
    p  
      a(class="button" href="/books/pages/1") Cancel 
  form(action=`/books/${book.id}/delete` onsubmit="return confirm('Do you really want to delete this book?');" method="POST")
    p 
      input(type="submit" value="Delete Book")